@using TaskMaster.Data
@model TaskMaster.Data.Task

<h2>Görev Planlayıcısı</h2>
<hr>
<form asp-controller="Home" asp-action="TaskCreate" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Görev Başlığı</label>
        <input asp-for="Title" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="EngineerId" class="form-label">Görevden Sorumlu Mühendis</label>
        <select aspfor="EngineerId" asp-items="ViewBag.Engineers" class="form-select">
            <option value="">Seçiniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>